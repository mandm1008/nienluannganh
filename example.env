########################################
# üîê Webservice & Authentication
########################################

WEBSERVICE_URL="..."                        # External control panel or admin site
WEBSERVICE_USER="..."                       # Webservice authentication username
WEBSERVICE_PASS="..."                       # Webservice authentication password

NEXTAUTH_SECRET="..."                       # Secret key for NextAuth.js sessions (just a random string)
NEXTAUTH_URL="..."                          # Base URL for NextAuth.js (should match WEBSERVICE_URL)


########################################
# üéì Moodle Platform Configuration
########################################

MOODLE_URL="..."                            # Base URL of the Moodle instance
MOODLE_HOME_DIR="/var/www/html/moodle"      # Path to the Moodle source code

MOODLE_ADMIN_USER="..."                     # Admin username for CLI or API access
MOODLE_ADMIN_PASS="..."                     # Admin password
MOODLE_ADMIN_EMAIL="..."                    # Admin email address

MOODLE_WEBHOOKS_TOKEN="..."                 # Token generated by CLI register_webhook.php
MOODLE_CLOUDSUPPORT_TOKEN="..."             # Token for the local_cloudsupport plugin


########################################
# üê≥ Moodle Container Runtime Settings
########################################

MOODLE_DB_IMAGE="moodleimage"               # Name of the Moodle container image
MOODLE_CONTAINER_MEMORY="4Gi"               # Allocated memory for the Moodle container
MOODLE_CONTAINER_CPU="1"                    # Allocated CPU cores
MOODLE_CONTAINER_CONCURRENCY="30"           # Maximum concurrent requests (e.g., for Cloud Run)

MOODLE_CONTAINER_MIN_INSTANCES="1"          # Minimum number of container instances to keep warm (e.g., 1 needed for moodle-cron)
MOODLE_CONTAINER_MAX_INSTANCES="5"          # Maximum number of instances to scale up during high traffic (increase limit via Google Support if needed)
MOODLE_CONTAINER_TIMEOUT="900s"             # Timeout duration for each request (max: 900s = 15 minutes)

MOODLE_OFFSET_OPENTIME="-10"                # Quiz open time offset in minutes (before scheduled start time)
MOODLE_OFFSET_CLOSETIME="10"                # Quiz close time offset in minutes (after scheduled end time)
